{
  "name": "nft-marketplace-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "concurrently -c \"cyan,magenta\" -n api,web \"pnpm --filter api dev\" \"pnpm --filter web dev\"",
    "build": "pnpm --filter api build && pnpm --filter web build",
    "start": "concurrently -c \"cyan,magenta\" -n api,web \"pnpm --filter api start\" \"pnpm --filter web start\"",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:seed": "pnpm --filter api db:seed",
    "db:setup": "pnpm db:migrate && pnpm db:seed",
    "format": "prettier --write .",
    "lint": "eslint \"apps/**/*.{ts,tsx,js,jsx}\"",
    "type-check": "tsc -b",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@next/eslint-plugin-next": "^14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.0",
    "typescript": "^5.0.0"
  }
}
